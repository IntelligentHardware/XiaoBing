    </view>
    <view class="ipt-wrap border-b flex ai-center">
      <label class="userName">{{recipe.step[1].content}}</label>
    </view>
    <view class="ipt-wrap border-b flex ai-center">
      <label class="userName">{{recipe.step[2].content}}</label>
