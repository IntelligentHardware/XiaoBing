      <!-- <image class='fresh-tag' src="{{item.image_url}}"></image> -->
    </image>
  </view>



    <view class="ipt-wrap border-b flex ai-center">
      <view class="userName">菜名：  </view>
      <label class="userName">{{recipe.name}}</label>
      
    </view>


    <view class="ipt-wrap border-b flex ai-center">
